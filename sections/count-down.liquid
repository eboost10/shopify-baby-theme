
{% assign countdown = section.settings.count_down_timer %}
{% if countdown %}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    {% if section.settings.enable_background %}
      height: {{ section.settings.height }}px;
    {% endif %}
    {% if section.settings.image != blank %}
      background-image: url({{ section.settings.image | image_url: width: 1920 }});
      background-repeat: no-repeat;
      background-position: center;
      background-attachment: fixed;
      background-size: cover;
    {% endif %}
    display: flex;
    align-items: center;
    text-align: center;
  }
  {% if section.settings.image != blank %}
    .section-{{ section.id }}-padding:after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 10rem;
      -webkit-mask-image: url({{ 'wave.svg' | asset_url }});
      mask-image: url({{ 'wave.svg' | asset_url }});
      background-color: var(--gradient-background);
      transform: rotate(180deg);
    }
  {% endif %}
  .section-{{ section.id }}-padding h2 {
    margin: 0;
  }
  .section-{{ section.id }}-padding .product__countdown {
      font-size: 8vw;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .product__countdown {
        font-size: 4vw;
    }
  }
{%- endstyle -%}
<div class="gradient color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
        <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}
    <div class="product__countdown">
      <div class="countdown" data-countdown data-countdown-value="{{ countdown }}"></div>
    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "Count Down",
  "class": "section section_count_down",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      },
      {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
      },    
     {
        "type": "checkbox",
        "id": "enable_background",
        "label": "Enable background image",
        "default": true
      },
      {
        "type": "range",
        "id": "height",
        "min": 0,
        "max": 800,
        "step": 100,
        "unit": "px",
        "label": "Height",
        "default": 500
      }, 
      {
        "type": "inline_richtext",
        "id": "title",
        "default": "Limited-Time Offers, End in",
        "label": "t:sections.featured-collection.settings.title.label"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__1.label"
          },
          {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__2.label"
          },
          {
            "value": "h0",
            "label": "t:sections.all.heading_size.options__3.label"
          }
        ],
        "default": "h1",
        "label": "t:sections.all.heading_size.label"
      },
      {
        "type": "text",
        "id": "count_down_timer",
        "label": "Deal Time",
        "default": "2020\/12\/25 22:11:00",
        "info": "Use for countdown of all products, Ex: 2020\/12\/25 22:11:00 "
      },
      {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Count Down"
      
    }
  ]
}
{% endschema %}