
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{{ 'component-recentlyviewed.css' | asset_url | stylesheet_tag }}
<div  class="recently-viewed section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}" data-section="{{ section.id }}">
    <div class="page-width">
        <h2 class="text-center related-products__heading inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        <div id="recently-viewed-products-list" class="grid  product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down" {% if  section.settings.enable_slider %}
            data-slick='{
                    "dots": false,
                    "arrows": true,
                    "infinite": false,
                    "mobileFirst": true,
                    "adaptiveHeight": false,
                    "slidesToShow": {{section.settings.columns_desktop}},
                    "slidesToScroll": {{section.settings.columns_desktop}},
                    "prevArrow": "<div class=&apos;slick-prev slick-arrow slick-arrow--large&apos;><svg aria-hidden=&apos;true&apos; focusable=&apos;false&apos; class=&apos;icon icon-caret&apos; viewBox=&apos;0 0 10 6&apos;><path fill-rule=&apos;evenodd&apos; clip-rule=&apos;evenodd&apos; d=&apos;M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z&apos; fill=&apos;currentColor&apos;></path></svg></div>", 
            "nextArrow": "<div class=&apos;slick-next slick-arrow slick-arrow--large&apos;><svg aria-hidden=&apos;true&apos; focusable=&apos;false&apos; class=&apos;icon icon-caret&apos; viewBox=&apos;0 0 10 6&apos;><path fill-rule=&apos;evenodd&apos; clip-rule=&apos;evenodd&apos; d=&apos;M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z&apos; fill=&apos;currentColor&apos;></path></svg></div>",
                    "responsive": [
                        {
                            "breakpoint": 1100,
                            "settings": {
                                "slidesToShow": {{section.settings.columns_desktop}},
                                "slidesToScroll": {{section.settings.columns_desktop}},
                                "dots": false,
                                "arrows": true
                            }
                        },
                        {
                            "breakpoint": 992,
                            "settings": {
                                "slidesToScroll": 3,
                                "slidesToShow": 3,
                                "arrows": false,
                                "dots": true
                            }
                        },
                        {
                            "breakpoint": 551,
                            "settings": {
                                "slidesToScroll": {{section.settings.columns_mobile}},
                                "slidesToShow": {{section.settings.columns_mobile}},
                                "arrows": false,
                                "dots": true
                            }
                        },
                        {
                            "breakpoint": 300,
                            "settings": {
                                "slidesToScroll": 1,
                                "slidesToShow": 1,
                                "arrows": false,
                                "dots": true
                            }
                        }
                    ]
                }'
            {% endif %}>
        </div>
    
    </div>
</div>
{{ 'jquery.tmpl.min.js' | asset_url | script_tag }}
{{ 'jquery.products.min.js' | asset_url | script_tag }}
<script>
    
     Shopify.Products.showRecentlyViewed({ 
        howManyToShow: {{ section.settings.products_to_show }},
        wrapperId: 'recently-viewed-products-list', 
        image_shape: {{ section.settings.image_shape | json }},
        media_aspect_ratio: {{section.settings.image_ratio | json }},
        show_secondary_image: {{ section.settings.show_secondary_image | json }},
        show_vendor: {{ section.settings.show_vendor | json }},
        show_rating: {{ section.settings.show_rating | json }},
        show_quick_add: {{ section.settings.enable_quick_add | json }},
        section_id: {{ section.id |  downcase | handle |  json }},
        onComplete: function() {
            $('#recently-viewed-products-list').addClass('slider');
            var recentlyGrid = $('#recently-viewed-products-list');
            var productGrid = recentlyGrid.children();
            if(productGrid.length > 0) {
                var configr = $('#recently-viewed-products-list').data('slick')
                $('#recently-viewed-products-list').not('.slick-initialized').slick(configr); 
            }else{
                $('.recently-viewed').hide();
            }
            
        }
    });
    Shopify.Products.recordRecentlyViewed();
</script>

